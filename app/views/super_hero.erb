<form method = "POST" action="/teams">

<h1>Create a Team and Heroes!</h1>
<label for="team_name">Team Name:</label><br>
<input id="team_name" type="text" name="team[name]" /><br>
<label for="team_motto">Team Motto:</label><br>
<input id="team_motto" type="text" name="team[motto]" /><br>

<% 3.times do |i| %>

<h1>Hero <%= i+ 1%></h1>
<label for="member<%=i+1%>_name">Hero´s Name:</label><br>
<input id="member<%=i+1%>_name" type="text" name="team[heroes][][name]"/><br>
<label for="member<%=i+1%>_power">Hero´s Power:</label><br>
<input id="member<%=i+1%>_power" type="text" name="team[heroes][][power]" /><br>
<label for="member<%=i+1%>_bio">Hero´s Bio:</label><br>
<input id="member<%=i+1%>_bio" type="text" name="team[heroes][][bio]" /><br>
<%end%>
<input type="submit" value ="submit">
</form>


